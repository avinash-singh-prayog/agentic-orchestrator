FROM python:3.14-slim

WORKDIR /app

# Install uv package manager
RUN pip install uv

# Copy dependency files
COPY pyproject.toml ./

# Install dependencies
RUN uv pip install --system -e .

# Copy source code
COPY src/ ./src/

# Set Python path
ENV PYTHONPATH=/app/src

# Expose port
EXPOSE 8000

# Run the supervisor
CMD ["python", "-m", "uvicorn", "orchestrator.agents.supervisor.main:app", "--host", "0.0.0.0", "--port", "8000"]

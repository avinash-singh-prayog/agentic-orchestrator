FROM python:3.12-slim

WORKDIR /app

# Install uv package manager and curl for healthcheck
RUN pip install uv && apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Copy dependency files and README (required by hatchling)
COPY pyproject.toml README.md ./

# Copy source code first (needed for editable install)
COPY src/ ./src/

# Install dependencies
RUN uv pip install --system -e .

# Set Python path
ENV PYTHONPATH=/app/src

# Dynamic port based on AGENT_TYPE
ARG AGENT_PORT=9001
EXPOSE ${AGENT_PORT}

# Entry point script to run the correct agent
CMD ["sh", "-c", "python -m orchestrator.agents.workers.${AGENT_TYPE}.server"]

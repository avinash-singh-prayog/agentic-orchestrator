# ===========================================
# AGENTIC ORCHESTRATOR - ENVIRONMENT CONFIG
# ===========================================

# -------------------------------------------
# LLM Configuration (via LiteLLM)
# -------------------------------------------
# Supervisor uses complex reasoning model
SUPERVISOR_LLM="openai/gpt-4-turbo"

# Rate Agent uses fast inference model
RATE_AGENT_LLM="groq/llama-3.1-70b-versatile"

# Serviceability Agent uses lightweight local model
SERVICE_AGENT_LLM="ollama/mistral"

# Carrier Agent uses reliable model
CARRIER_AGENT_LLM="openai/gpt-4-turbo"

# -------------------------------------------
# LLM Provider API Keys
# -------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# For Azure OpenAI (optional)
# AZURE_API_BASE=https://your-azure-resource.openai.azure.com/
# AZURE_API_KEY=your_azure_api_key
# AZURE_API_VERSION=2024-02-15-preview

# For Gemini (optional)
# GEMINI_API_KEY=your_gemini_api_key

# -------------------------------------------
# Transport Configuration (SLIM)
# -------------------------------------------
DEFAULT_MESSAGE_TRANSPORT=SLIM
TRANSPORT_SERVER_ENDPOINT=http://localhost:46357

# Alternative: NATS transport for local development
# DEFAULT_MESSAGE_TRANSPORT=NATS
# TRANSPORT_SERVER_ENDPOINT=nats://localhost:4222

# -------------------------------------------
# HITL (Human-in-the-Loop) Configuration
# -------------------------------------------
# Orders above this value (USD) require manual approval
MAX_AUTO_APPROVAL_LIMIT=5000

# -------------------------------------------
# Identity Service Configuration
# -------------------------------------------
# For V1: Local implementation (no external service needed)
IDENTITY_SERVICE_TYPE=local

# For V2: AGNTCY Identity Service
# IDENTITY_SERVICE_TYPE=agntcy
# IDENTITY_SERVICE_URL=http://localhost:8080
# IDENTITY_SERVICE_API_KEY=your_identity_api_key

# -------------------------------------------
# Observability (OpenTelemetry)
# -------------------------------------------
OTLP_HTTP_ENDPOINT=http://localhost:4318
ENABLE_TRACING=true

# -------------------------------------------
# Database (LangGraph Checkpointer)
# -------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=orchestrator
POSTGRES_PASSWORD=orchestrator_secret
POSTGRES_DB=orchestrator

# -------------------------------------------
# Service Ports
# -------------------------------------------
SUPERVISOR_PORT=8000
SERVICEABILITY_AGENT_PORT=9001
RATE_AGENT_PORT=9002
CARRIER_AGENT_PORT=9003

# -------------------------------------------
# Logging
# -------------------------------------------
LOG_LEVEL=INFO

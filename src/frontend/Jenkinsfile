pipeline {
    agent any
    environment {
        // --- CONFIGURATION ---
        // It is safe to commit Account IDs and Region (they are not secrets)
        AWS_ACCOUNT_ID = '946926531781'
        AWS_REGION     = 'ap-south-1'
        REPO_NAME      = 'agentic-orchestrator/frontend'
        
        // This ID matches the credential ID you created in Jenkins
        AWS_CREDS_ID   = 'aws-creds' 
        
        IMAGE_URI      = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${REPO_NAME}"
    }
    
    stages {
        stage('Checkout') {
            steps {
                // Jenkins automatically checks out the code when using "Pipeline from SCM"
                checkout scm
            }
        }
        
        stage('Build & Push') {
            steps {
                script {
                    // This command tells Jenkins: "Look in your secure store for 'aws-ecr-creds'
                    // and put the username in 'AWS_KEY' and password in 'AWS_SECRET'"
                    withCredentials([usernamePassword(credentialsId: AWS_CREDS_ID, passwordVariable: 'AWS_SECRET', usernameVariable: 'AWS_KEY')]) {
                        
                        // We export these secrets ONLY for this specific shell command block
                        sh """
                            export AWS_ACCESS_KEY_ID=${AWS_KEY}
                            export AWS_SECRET_ACCESS_KEY=${AWS_SECRET}
                            export AWS_DEFAULT_REGION=${AWS_REGION}
                            
                            # Login
                            aws ecr get-login-password | docker login --username AWS --password-stdin ${IMAGE_URI}
                            
                            # Build
                            cd src/frontend
                            docker build -t ${IMAGE_URI}:${BUILD_NUMBER} -t ${IMAGE_URI}:latest .
                            
                            # Push
                            docker push ${IMAGE_URI}:${BUILD_NUMBER}
                            docker push ${IMAGE_URI}:latest
                        """
                    }
                }
            }
        }
    }
}